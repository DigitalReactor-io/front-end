<form id="newUser">
    <div class="new-user-email">
        <div class="warning">
            {{#if warning.invalidEmail}}
                Требуется ввести корректный email
            {{/if}}
        </div>
        <div class="new-user-email-input">
            {{input value=user.email placeholder="Email"}}
        </div>
    </div>
    <div class="new-user-password">
        <div class="warning">
            {{#if warning.invalidPassword}}
                Требуется ввести пароль более 5 символов
            {{/if}}
        </div>
        <div class="new-user-password-input">
            {{input value=user.password placeholder="Password"}}
        </div>
    </div>

    <div class="new-user-button">
        {{#if sending}}
            <button disabled>Далее</button>
        {{else}}
            <button {{action "validationAndHandle" user}}>Далее</button>
        {{/if}}
    </div>
</form>
